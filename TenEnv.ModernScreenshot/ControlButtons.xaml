<UserControl x:Class="TenEnv.ModernScreenshot.ControlButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TenEnv.ModernScreenshot"
             mc:Ignorable="d" 
             Height="48">
    <Grid>
        <WrapPanel>
            <Button x:Name="RectFormBtn" Click="RectFormBtn_Click"  Height="48" Width="48" ToolTip="Rectangular Cut"></Button>
            <Button x:Name="FreeFromBtn" Click="FreeFromBtn_Click" Height="48" Width="48" ToolTip="Free Form"></Button>
            <Button x:Name="FullScreenBtn" Click="FullScreenBtn_Click"  Height="48" Width="48" ToolTip="Full Screen"></Button>
            <Rectangle Margin="0,5,0,5" Width="1" Fill="#19FFFFFF"></Rectangle>
            <Button x:Name="CloseButton" Click="CloseButton_Click" Height="48" Width="48" ToolTip="Close">X</Button>
        </WrapPanel>
    </Grid>
</UserControl>
