<Window x:Class="TenEnv.ModernScreenshot.ScreenshotWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TenEnv.ModernScreenshot"
        mc:Ignorable="d"
        Title="ScreenshotWnd" Height="450" Closing="Window_Closing" Topmost="True" ResizeMode="NoResize" Width="800" ShowInTaskbar="False" AllowsTransparency="True" WindowState="Maximized" WindowStyle="None" Background="Transparent" IsHitTestVisible="False">
    <Grid x:Name="MainGrid">
        <Grid>
            <Rectangle HorizontalAlignment="Center" VerticalAlignment="Stretch" Width="2" Fill="White"></Rectangle>
            <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="2" Fill="White"></Rectangle>
        </Grid>
        <Image x:Name="imgScreen"/>
        <Grid Background="#7F000000"></Grid>
        <local:ControlButtons x:Name="cButtons" VerticalAlignment="Top" HorizontalAlignment="Center"></local:ControlButtons>
    </Grid>
</Window>
